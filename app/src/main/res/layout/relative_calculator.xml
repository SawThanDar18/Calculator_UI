<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="250dp"
        android:hint="0"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:paddingBottom="15dp"
        android:layout_below="@+id/edit_text">

            <Button
                android:id="@+id/ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:minHeight="80dp"
                android:text="AC"
                android:textColor="#ef0707"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ac"
                android:layout_marginLeft="10dp"
                android:minHeight="80dp"
                android:text="Del"
                android:textColor="#ef0707"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/del"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:minHeight="80dp"
                android:text="%"
                android:textColor="#181717"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/percent"
                android:minHeight="80dp"
                android:text="/"
                android:textColor="#181717"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ac"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:text="7"
                android:textColor="#181717"
                android:textSize="25sp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/seven"
                android:layout_below="@id/del"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:text="8"
                android:textColor="#181717"
                android:textSize="25sp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/eight"
                android:layout_below="@id/percent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:text="9"
                android:textColor="#181717"
                android:textSize="25sp" />

            <Button
                android:id="@+id/multi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/nine"
                android:layout_below="@id/div"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:text="*"
                android:textColor="#181717"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seven"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:text="4"
                android:textColor="#181717"
                android:textSize="25sp" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/four"
                android:layout_below="@id/eight"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:text="5"
                android:textColor="#181717"
                android:textSize="25sp" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/five"
                android:layout_below="@id/nine"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:text="6"
                android:textColor="#181717"
                android:textSize="25sp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/six"
                android:layout_below="@id/multi"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:minHeight="80dp"
                android:text="-"
                android:textColor="#181717"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/four"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:text="1"
                android:textColor="#181717"
                android:textSize="25sp" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/one"
                android:layout_below="@id/five"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:text="2"
                android:textColor="#181717"
                android:textSize="25sp" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/two"
                android:layout_below="@id/six"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:text="3"
                android:textColor="#181717"
                android:textSize="25sp" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/three"
                android:layout_below="@id/minus"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:minHeight="80dp"
                android:text="+"
                android:textColor="#181717"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/one"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:text=""
                android:textColor="#181717"
                android:textSize="25sp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/blank"
                android:layout_below="@id/two"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:text="0"
                android:textColor="#181717"
                android:textSize="25sp" />

            <Button
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/zero"
                android:layout_below="@id/three"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:minHeight="80dp"
                android:text="."
                android:textColor="#181717"
                android:textSize="25sp" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dot"
                android:layout_below="@id/plus"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:minHeight="80dp"
                android:text="="
                android:textColor="#181717"
                android:textSize="30sp"
                android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>